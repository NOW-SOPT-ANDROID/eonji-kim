<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/shape_line_15_rect"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_main_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile"
        app:layout_constraintEnd_toStartOf="@id/tv_user_self_description"
        app:layout_constraintStart_toEndOf="@id/iv_user_profile"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile"
        tools:text="기먼지" />

    <TextView
        android:id="@+id/tv_user_self_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_yellow_main_line_50_rect"
        android:gravity="end"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_user_name"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile"
        tools:text="안녕 나는 집에 가고 싶어" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>